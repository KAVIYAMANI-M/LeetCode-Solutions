class Solution {
    public int steps(int n,int count)
    {
        if(n==0) return count;
        if(n%2==1)
        {
            n=n-1;
            return steps(n,count+1);
        }
        else
        {
            return steps(n/2,count+1);
        }
    }
    public int numberOfSteps(int num) {
        int x=steps(num,0);
        return x;
    }
}
